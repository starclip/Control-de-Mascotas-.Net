<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/plugin/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Base.css" />
</head>
<body>
    <ul class="nav justify-content-center">
        <li class="nav-item nav-justified">
            <img src="~/Imagenes/imagenHuellaEditada.jpg" alt="Marca de animal" width="75" height="75" />
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Home">Inicio</a>
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Mascota">Mascotas</a>
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Cliente">Clientes</a>
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Cita">Citas</a>
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Tratamiento">Tratamientos</a>
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Veterinario">Veterinarios</a>
        </li>
        <li class="nav-item Titulo">
            <a class="nav-link" href="/Administrador">Administradores</a>
        </li>
    </ul>
    <hr />   
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/plugin/js")
    <script src="~/Scripts/Sistema/Base.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
